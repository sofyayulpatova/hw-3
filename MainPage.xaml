<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button x:Name="CustomerManagement"
                    Text="Customer Management"
                    Clicked="OnCustomerManagementClick"/>

            <Button x:Name="ProductManagement"
                Text="Product Management"
                Clicked="OnProductManagementClick"/>

            <Button x:Name="OrderManagement"
                Text="Order Management"
                Clicked="OnOrderManagementClick"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
